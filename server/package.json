{
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "dotenv -e .env.dev nest start --watch --host 0.0.0.0",
    "start": "nest start",
    "start:dev:test": "dotenv -e .env.test nest start --watch --host 0.0.0.0",
    "start:debug": "dotenv -e .env.dev nest start --debug --watch",
    "start:dev": "dotenv -e .env.development node dist/server/src/main",
    "start:prod": "dotenv -e .env.production node dist/server/src/main",
    "start:prod:migrate": "dotenv -e .env.production pnpm prisma generate && dotenv -e .env.production pnpm prisma migrate deploy && pnpm start:prod",
    "db:deploy": "dotenv -e .env.production pnpm prisma generate && dotenv -e .env.production pnpm prisma migrate deploy",
    "db:deploy:dev": "dotenv -e .env.development pnpm prisma generate && dotenv -e .env.development pnpm prisma migrate deploy",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "check": "pnpm run typecheck && pnpm run lint",
    "test": "dotenv -e .env.test vitest run --config ./vitest.config.mts",
    "test:watch": "dotenv -e .env.test vitest --config ./vitest.config.mts",
    "test:cov": "dotenv -e .env.test vitest run --coverage",
    "test:debug": "dotenv -e .env.test vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "concurrently \"dotenv -e .env.test pnpm run start\" \"dotenv -e .env.test vitest e2e-spec --config ./vitest.config.e2e.mts\"",
    "prisma-push:dev": "dotenv -e .env.dev prisma db push",
    "prisma-push:test": "dotenv -e .env.test prisma db push --skip-generate"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/platform-socket.io": "^10.4.15",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/websockets": "^10.4.15",
    "@prisma/client": "6.4.1",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^7.4.4",
    "jsonwebtoken": "^9.0.2",
    "multer": "1.4.5-lts.1",
    "prisma": "^6.4.1",
    "reflect-metadata": "^0.2.2",
    "resource": "^0.8.1",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "vitest-mock-extended": "^2.0.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@swc/core": "^1.11.8",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.24",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitest/coverage-v8": "^2.1.9",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "socket.io-client": "^4.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "unplugin-swc": "^1.5.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.9"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
